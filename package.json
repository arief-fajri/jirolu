{
  "name": "jirolu-svelte",
  "version": "0.0.7",
  "author": {
    "name": "Arif Fajri",
    "email": "arief.fajri191@gmail.com"
  },
  "description": "This is a collection of components I use on a regular basis packaged up for use.",
  "keywords": [
    "svelte",
    "sveltekit",
    "input",
    "text",
    "input-text",
    "textarea",
    "select",
    "option",
    "search",
    "select-option",
    "search-option",
    "slider",
    "checkbox"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/arief-fajri/jirolu"
  },
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && npm run package",
    "preview": "vite preview",
    "package": "svelte-kit sync && svelte-package && publint",
    "prepublishOnly": "npm run package"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    },
    "./Text.svelte": {
      "types": "./dist/Input/Text.svelte.d.ts",
      "svelte": "./dist/Input/Text.svelte"
    },
    "./Textarea.svelte": {
      "types": "./dist/Input/Textarea.svelte.d.ts",
      "svelte": "./dist/Input/Textarea.svelte"
    },
    "./Option.svelte": {
      "types": "./dist/Input/Option.svelte.d.ts",
      "svelte": "./dist/Input/Option.svelte"
    },
    "./OptionWithSearch.svelte": {
      "types": "./dist/Input/OptionWithSearch.svelte.d.ts",
      "svelte": "./dist/Input/OptOptionWithSearchion.svelte"
    },
    "./Checkbox.svelte": {
      "types": "./dist/Input/Checkbox.svelte.d.ts",
      "svelte": "./dist/Input/Checkbox.svelte"
    },
    "./Switch.svelte": {
      "types": "./dist/Input/Switch.svelte.d.ts",
      "svelte": "./dist/Input/Switch.svelte"
    }
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "peerDependencies": {
    "svelte": "^4.0.0"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^2.0.0",
    "@sveltejs/kit": "^1.20.4",
    "@sveltejs/package": "^2.0.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-svelte": "^2.30.0",
    "postcss": "^8.4.31",
    "postcss-load-config": "^4.0.1",
    "prettier": "^2.8.0",
    "prettier-plugin-svelte": "^2.10.1",
    "publint": "^0.1.9",
    "svelte": "^4.0.5",
    "svelte-check": "^3.4.3",
    "tailwindcss": "^3.3.5",
    "tslib": "^2.4.1",
    "typescript": "^5.0.0",
    "vite": "^4.4.2"
  },
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module"
}
